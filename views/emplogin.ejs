<style>
    .container {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      /* background-color: #f8ccad; */
    }
    body {
      background-color: #D8BFD8	;
    }
  
    .heading {
      font-size: 30px;
      letter-spacing: 1px;
      font-weight: bold;
      color: rgb(243, 243, 243);
      margin-bottom: 15px;
      margin-left: 25%;
      font-family: Jose-Bold;
    }
  
    @font-face {
      font-family: Jose-Bold;
      src: url(/Josefin_Sans/JosefinSans-Regular.ttf);
    }
    @font-face {
      font-family: Jose-Med;
      src: url(/Josefin_Sans/JosefinSans-Medium.ttf);
    }
    input {
      outline: none;
      border: none;
    }
    input:focus {
      border-color: transparent !important;
      background-color: #f8ccad;
      transform: scale(1.1);
      transition: all 0.1s linear;
    }
  
    button {
      outline: none !important;
      border: none;
      background: 0 0;
    }
    button:hover {
      cursor: pointer;
    }
  
    .box {
      width: 25%;
      height: 70%;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #c71574	;
      justify-content: center;
      border-radius: 8px;
      
      /* padding: 15px;
      margin-left: 10px; */
      /* box-shadow: 10px 10px 20px #000; */
    }
    /* .box:hover {
      transform: scale(1.1);
      transition: all 0.3s linear;
    } */
  
    img {
      margin-left: 35%;
      border-radius: 80px;
    }
    .input100 {
      font-family: Jose-Med;
      font-size: 18px;
      line-height: 1.5;
      color: rgb(8, 8, 8);
      display: block;
      width: 90%;
      height: 6%;
      background: transparent;
      /* background: #f8ccad; */
      height: 50px;
      border-radius: 25px;
      padding: 0 50px 0 50px;
      margin-left: 20px;
      margin-bottom: 30px;
    }
  
    .login100-form-btn {
      font-family: Jose-Bold;
      font-weight: bolder;
      font-size: 15px;
      letter-spacing: 2px;
      line-height: 1.5;
      color: rgb(0, 0, 0);
      text-transform: uppercase;
      width: 70%;
      height: 50px;
      border-radius: 5px;
      background: #f8ccad;
      padding: 0 25px;
      margin-left: 60px;
      margin-top: 20px;
      box-shadow: 0px 3px 5px #f8ccad;
    }
    .login100-form-btn:hover {
      background: #0b0742;
      transform: scale(1.1);
      transition: all 0.1s linear;
    }
  
    .glow::before,
    .glow::after {
      content: "";
      margin-left: 37.5%;
      margin-top: 7%;
      position: absolute;
      left: -2px;
      top: -2px;
      background: linear-gradient(
        45deg,
        #e6fb04,
        #ff6600,
        #00ff66,
        #ff00ff,
        #6e0dd0,
        #dd3300,
        #000
      );
      background-size: 500%;
      width: 25.3%;
      height: 72%;
      border-radius: 15px;
      z-index: -15;
      animation: bg 10s linear infinite;
    }
    @keyframes bg {
      0% {
        background-position: 0 0;
      }
      50% {
        background-position: 400% 0;
      }
      100% {
        background-position: 0 0;
      }
    }
    .glow::after {
      filter: blur(10px);
    }
  
    .wel {
      content: "";
      text-align: center;
      text-transform: uppercase;
      background: linear-gradient(
        45deg,
        #e6fb04,
        #ff6600,
        #00ff66,
        #ff00ff,
        #6e0dd0,
        #dd3300,
        #000
      );
      border-radius: 20px;
      background-size: 500%;
      width: 80%;
      height: 5%;
      margin-left: 45px;
      animation: bg2 10s ease infinite;
    }
    @keyframes bg2 {
      0% {
        background-position: 0 50%;
      }
      50% {
        background-position: 100% 0;
      }
      100% {
        background-position: 0 50%;
      }
    }
  </style>
  
  <!DOCTYPE html>
  <html lang="en">
    <head>
      <title>Flight Login</title>
      <!-- <link rel="stylesheet" href="style.css" /> -->
      <link rel="icon" type="image/png" href="/images/manager.png"/>
    </head>
    <body>
      <div class="container">
        <div class="box">
          <div class="glow">
            <div class="heading">Admin Login</div>
            <div class="">
              <div class="img">
                <img src="/images/penguin.png" width="50" style=" margin-left: 45%;" />
                
              </div>
              <h3 class="wel">Welcome</h3>
              <!-- <p class="text-center">
                  Sign in by entering the information below
                </p> -->
              <form action="/login/chkemplogin" method="post">
                <div >
                  <input
                    type="text"
                    class="input100"
                    placeholder="Username"
                    name="empemail"
                    required
                  />
                  <level
                  for="empemail">
                  </level>

                </div>
                <div>
                  <input
                    type="password"
                    class="input100"
                    placeholder="Password"
                    name="password"
                    required
                  />
                  <level
                  for="password">
                  </level>
                </div>
                <div>
                  <button type="submit" class="login100-form-btn">SIGN UP</button>
                </div>

                <div  style="display: flex; color: #000; justify-content: center; padding: 3px; font-weight: bold; font-size: 25px; margin-top: 2%;">
                    <%=message%>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </body>
  </html>
  