    .maincontainer
    {
  background:#D8BFD8	;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
    }

    .box
{ width: auto;
  height: auto;
  width: 50vw;
  background:#DB7093	; 
  border-radius: 30px;
  padding: 20px;
}

.heading{
    font-size: 25px;
    letter-spacing: 1px;
    font-weight: bold;
    color: black;
    display: flex;
    flex-direction: row;
    margin-bottom: 10px;
