<html>
    
        <head>
            <title>Employee Details</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
              <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
              <script src="/javascripts/project.js"></script>
             <link rel="icon" type="image/jpg" href="/images/emp.jpg"/>
              
        </head>
        <div class="maincontainer">
        <div class="box">
          <a href="/employee/displayallemployees"> <img src="/images/emp.gif" " width="50";></a>
            <div class="heading" >
            <img src="/images/employe.png" width="40">
            EMPLOYEE INTERFACE
          </div>

            <form action="/employee/employeesubmit" method="post" enctype="multipart/form-data" class="row g-3">
            <div class="col-md-12">
            <div class="input-group">
                <span class="input-group-text"><b>First and last name</b></span>
                <input type="text" name="firstname" aria-label="First name" class="form-control">
                <input type="text" name="lastname" aria-label="Last name" class="form-control">
            </div>
          </div>
          
          
          <div class="col-md-4"
          <div margin-right: 10px>
          <span ><b>Gender</b>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="gender" name="gender" class="custom-control-input" value="Male">
            <label class="custom-control-label" for="gender">Male</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="gender" name="gender" class="custom-control-input" value="Female">
            <label class="custom-control-label" for="gender">Female</label>
          </div>
        </span>
        </div>
      
        
        
        <div class="col-md-4">
          <div class="input-group">
            <div margin-bottom:50px>
              <span> <b>Date of Birth</b></span>
              <input type="date" aria-label="dob" name="dob" class="form-control">
           </div>   
          </div>
        </div>
        
        <div class="col-md-4">
          <label for="picture" class="form-label"><b>Picture</b></label>
          <input type="file" class="form-control" name="picture" id="picture">
        </div>

      <div class="col-12">
          <label for="address" class="form-label"><b>Address</b></label>
          <input type="text" class="form-control" name="address" id="address" placeholder="Your Address">
        </div>
      
        

          <div class="col-md-6">
            <label for="state" class="form-label"><b>State</b></label>
            <select id="state" name="state" class="form-select">
              <option selected>Select State</option>
            </select>
          </div>

          <div class="col-md-6">
            <label for="city" class="form-label"><b>City</b></label>
            <select id="city" name="city" class="form-select">
              <option selected>Select City</option>
            </select>
          </div>

          <div class="col-6">
            <button type="submit" class="btn btn-primary buttonstyle">Submit</button>
          </div>

          <div class="col-6">
            <button type="reset" class="btn btn-primary buttonstyle" >Reset</button>
          </div>
          
          <div class="col-12" style="display: flex; justify-content: center; padding: 5px; font-weight: bold;">
            <%=message%>
            </div>

          </form>        
        </div>
        </div>  
        
</html>