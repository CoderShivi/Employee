<html>
    
        <head>
            <title>Employee Details</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
              <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
              <script src="/javascripts/project.js"></script>

              <script>
                $(document).ready(function(){
                    var dbgender=$('#dbgender').val()
                $('.Gd').map((i,item)=>{
                     console.log(dbgender)
                        if($(item).val()==dbgender)
                        {
                            $(item).prop('checked',true)
                        }
                    })
                })
            </script>
        </head>
        <div class="maincontainer">
        <div class="box">
            <a href="/employee/displayallemployees"> <img src="/images/emp.gif" " width="50";></a>
            <div class="heading" >
            <img src="/images/employe.png" width="40">
            EMPLOYEE UPDATION
            </div>

            <form action="/employee/employee_edit_delete" method="post" class="row g-3">
                <input type="hidden" id="dbgender" value="<%=data.gender%>">
                <input type="hidden" name="employeeid" value="<%=data.employeeid%>">
            
            <div class="col-md-12">
            <div class="input-group">
                <span class="input-group-text"><b>First and last name</b></span>
                <input type="text" name="firstname" aria-label="First name" class="form-control" value="<%=data.firstname%>">
                <input type="text" name="lastname" aria-label="Last name" class="form-control"value="<%=data.lastname%>">
            </div>
          </div>
          
          
          <div class="col-md-4"
          
          <span><b>Gender</b>
          <div class="form-check">
            <input type="radio" id="gender" name="gender" class="form-check-input Gd" value="Male">
            <label class="form-check-label" for="gender">Male</label>
          </div>
          <div class="form-check">
            <input type="radio" id="gender" name="gender" class="form-check-input Gd" value="Female">
            <label class="form-check-label" for="gender">Female</label>
          </div>
        </span>
        </div>
    
        
        
        <div class="col-md-4">
          <div class="input-group">
            <div margin-bottom:50px>
              <span> <b>Date of Birth</b></span>
              <input type="date" aria-label="dob" name="dob" class="form-control" value="<%=data.dob%>">
           </div>   
          </div>
        </div>
        
        
      <div class="col-12">
          <label for="address" class="form-label"><b>Address</b></label>
          <input type="text" class="form-control" name="address" id="address" placeholder="Your Address" value="<%=data.address%>">
        </div>
      
        

          <div class="col-md-6">
            <label for="state" class="form-label"><b>State</b></label>
            <select id="state" name="state" class="form-select">
              <option value="<%=data.state%>"><%=data.state%> </option>
            </select>
          </div>

          <div class="col-md-6">
            <label for="city" class="form-label"><b>City</b></label>
            <select id="city" name="city" class="form-select">
              <option value="<%=data.city%>"><%=data.city%></option>
            </select>
          </div>

          <div class="col-6">
            <button type="submit" name="btn" value="Edit" class="btn btn-primary buttonstyle">Edit</button>
          </div>

          <div class="col-6">
            <button type="submit" name="btn" value="Delete" class="btn btn-primary buttonstyle" >Delete</button>
          </div>
          
          

          </form>        
        </div>
        </div>  
